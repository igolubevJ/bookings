{{template "base" .}}

{{define "content"}}
  <div class="container">
    <div class="row pt-5">
      <div class="col">
        <h1>This is about page</h1>

        <p>This came from the template: {{index .StringMap "test"}}</p>

        {{if ne (index .StringMap "remoteIp") ""}}
          Your remote IP is {{index .StringMap "remoteIp"}}
        {{else}}
          I don't know your ip address yet. Visit the <a href="/">Home page</a>
          so I can set it.
        {{end}}
      </div>
    </div>
  </div>
{{end}}
